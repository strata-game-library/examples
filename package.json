{
  "name": "@jbcom/strata-examples",
  "version": "1.0.0",
  "private": true,
  "description": "Example applications for Strata 3D",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbcom/nodejs-strata-examples"
  },
  "author": "Jon Bogaty <jon@jonbogaty.com>",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "dev:terrain": "pnpm --filter basic-terrain dev",
    "dev:water": "pnpm --filter water-scene dev",
    "dev:sky": "pnpm --filter sky-volumetrics dev",
    "dev:vegetation": "pnpm --filter vegetation-showcase dev",
    "typecheck": "pnpm -r typecheck",
    "test:visual": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "typescript": "^5.7.2"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.3.12",
      "@types/react-dom": "18.3.1"
    }
  }
}
